<% if (typeof errors != "undefined") { %>
    <div class="alert alert-danger" role="alert">
        <% errors.forEach(error => { %>
            <ul>
                <li><%= error.msg %></li>
            </ul>
        <% }) %>
    </div>

<% } %>


<form method="POST" action="/contact?_method=PUT">
    <input type="hidden" name="_id" value="<%= editContact._id %>">
    <input type="hidden" name="oldName" value="<%= editContact.oldName || editContact.name %>">
    <div class="mb-3">
      <label for="name" class="form-label">Name</label>
      <input type="text" class="form-control" id="name" name="name" required value="<%= editContact.name %>">
    </div>
    <div class="mb-3">
      <label for="nohp" class="form-label">Number Phone</label>
      <input type="text" class="form-control" id="nohp" name="nohp" required value="<%= editContact.nohp %>">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= editContact.email %>">
    </div>
  

    <button type="submit" class="btn btn-primary">Boom</button>
</form>